<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:p="http://www.springframework.org/schema/p" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:component-scan base-package="pl.lukaz.poligon.gae.workservice"/>

	<bean class="pl.lukaz.poligon.gae.workservice.server.jdo.PMF"/>

	<bean name="/login/*" class="pl.lukaz.poligon.gae.workservice.web.LoginController" />
	<bean name="/account/*" class="pl.lukaz.poligon.gae.workservice.web.AccountController" />
	
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver" p:prefix="/WEB-INF/view/" p:suffix=".jsp" />
</beans>